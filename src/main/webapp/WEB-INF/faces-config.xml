<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>rentBean</managed-bean-name>
		<managed-bean-class>com.book.managedbeans.RentBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>welcomePage.xhtml</display-name>
		<from-view-id>/welcomePage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>bookList</from-outcome>
			<to-view-id>/bookList.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>bookList.xhtml</display-name>
		<from-view-id>/bookList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{rentBean.viewBook(book.id)}</from-outcome>
			<to-view-id>/bookInfo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>bookInfo.xhtml</display-name>
		<from-view-id>/bookInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{rentBean.bookByAuthor(rentBean.book.author)}</from-outcome>
			<to-view-id>/booksByAuthor.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>bookInfo.xhtml</display-name>
		<from-view-id>/bookInfo.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{rentBean.bookByCategory(rentBean.book.category)}</from-outcome>
			<to-view-id>/booksByCategory.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>booksByCategory.xhtml</display-name>
		<from-view-id>/booksByCategory.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{rentBean.viewBook(book.id)}</from-outcome>
			<to-view-id>/bookInfo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>booksByAuthor.xhtml</display-name>
		<from-view-id>/booksByAuthor.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{rentBean.viewBook(book.id)}</from-outcome>
			<to-view-id>/bookInfo.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomePage.xhtml</display-name>
		<from-view-id>/welcomePage.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>soldBooks</from-outcome>
			<to-view-id>/soldBooks.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
